<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .center-div {
            padding-top: 10%;
        }
        .btn-btn-success {
            padding: .4em 2em;
        }
        form {
            padding: 0 3em;
        }
        #login .title > span {
            font-size: .8em;
        }
        body{
            background-color: rgb(101, 104, 103);
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-image: url('/assets/Paper.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center;">
    <div class="text-center center-div" id="login">
        <div class="container w-25 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">WELCOME</h2>
                <span>Login for existing email address</span>
            </div>
            <form action="/login" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email" name="email" required>
                    <small class="form-text text-muted text-left">Register email address</small>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password" required>
                </div>
                <button type="submit" class="btn btn-success rounded-pill">Submit</button>
                New user? <a href="/signup" target="_self">Signup</a>
                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger mt-3">
                        <%= error %>
                    </div>
                <% } %>
            </form>
        </div>
    </div>
</body>
</html>
